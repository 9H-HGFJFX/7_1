# MongoDB Atlas配置 - 生产环境
# 部署前必须替换为有效的MongoDB Atlas连接字符串
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/anti-fake-news?retryWrites=true&w=majority

# JWT配置
# 部署前必须替换为强随机密钥
JWT_SECRET=production_jwt_secret_key_must_be_changed
JWT_EXPIRES_IN=24h

# 服务器配置
PORT=3000
NODE_ENV=production

# API配置 - 用于前端调用
# 部署后更新为实际的后端URL
API_URL=https://anti-fake-news-backend.onrender.com/api