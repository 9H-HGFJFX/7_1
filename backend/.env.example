# 服务器配置
PORT=3000
NODE_ENV=development

# MongoDB数据库连接
MONGODB_URI=mongodb://localhost:27017/anti-fake-news
# 生产环境MongoDB连接（带认证）
# MONGODB_URI=mongodb://admin:secret@mongodb:27017/anti-fake-news?authSource=admin

# 🔴 重要提示：部署到Vercel时，必须在Vercel控制台中设置以下环境变量：
# - MONGODB_URI: 真实的MongoDB Atlas或其他生产数据库连接字符串
# - JWT_SECRET: 强随机密钥（使用至少32个字符的随机字符串）
# - NODE_ENV: production

# JWT配置
JWT_SECRET=your_jwt_secret_key_here_please_change_in_production
JWT_EXPIRES_IN=24h

# 文件上传配置
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# CORS配置
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080,http://localhost:5173,http://localhost:4173

# Vercel环境配置
# 当部署到Vercel时，以下变量会自动设置
# VERCEL_ENV: 环境名称 (development, preview, production)
# VERCEL_URL: 部署的URL

# 投票阈值配置
FAKE_NEWS_THRESHOLD=0.6  # 60%的投票认为是假新闻时
TRUE_NEWS_THRESHOLD=0.6  # 60%的投票认为是真新闻时
MIN_VOTES_TO_DETERMINE=10  # 确定新闻真实性所需的最小投票数

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API配置
API_PREFIX=/api