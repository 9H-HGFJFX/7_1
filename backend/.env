# 服务器配置
PORT=3000
NODE_ENV=development

# MongoDB数据库连接
# 本地开发环境连接
# 注意：使用前请确保MongoDB服务已启动
MONGODB_URI=mongodb://localhost:27017/anti-fake-news?directConnection=true
# 如果本地连接失败，尝试使用更简单的连接方式
# MONGODB_URI=mongodb://127.0.0.1:27017/anti-fake-news

# JWT配置
JWT_SECRET=anti_fake_news_jwt_secret_key_2024
JWT_EXPIRES_IN=24h

# 文件上传配置
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# CORS配置
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# 投票阈值配置
FAKE_NEWS_THRESHOLD=0.6
TRUE_NEWS_THRESHOLD=0.6
MIN_VOTES_TO_DETERMINE=10

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API配置
API_PREFIX=/api